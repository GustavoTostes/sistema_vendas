{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "incremental": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types/**"
    ],
    "paths": {
      "@/*": ["./*"]
    },
  },
}